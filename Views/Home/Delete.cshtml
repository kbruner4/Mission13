@{
    ViewData["Title"] = "Delete Bowler";
}
@model Bowler

<div class="text-center">
    <h2>Confirm Deletion</h2>
    <h3>Are you sure you want to delete bowler: @Model.BowlerFirstName @Model.BowlerLastName?</h3>

    <form method="post" asp-controller="Home" asp-action="Delete">
        <br /><button type="submit" class="btn btn-byu">Delete</button>
        <a asp-controller="Home" asp-action="Bowlers" class="btn btn-secondary font-weight-bold">Cancel</a>

        <input type="hidden" asp-for="BowlerID" />
    </form>
</div>
